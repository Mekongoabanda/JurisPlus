<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_intro"
    tools:context=".WhoIsItActivity"
    android:padding="10dp">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:id="@+id/linear_camer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/cameroun_flap">

        </ImageView>

        <TextView
            android:id="@+id/republique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="République du Cameroun \n Republic of Cameroon"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/linear_camer"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/app_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juris"
            android:textColor="@color/White"
            android:textSize="55dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/White"
            android:textSize="30dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        >



        <ImageView
            android:id="@+id/sceau_cmr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sceau_cameroun">

        </ImageView>

        <TextView
            android:id="@+id/whoIsIt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qui êtes vous?"
            android:layout_marginTop="40dp"
            android:textColor="@color/White"
            android:textSize="30dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/magistrat_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@drawable/btn_camer"
                android:text="Magistrat"
                android:textColor="@color/JauneMTN"
                android:textStyle="bold" />

            <Button
                android:id="@+id/avocat_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_camer"
                android:text="Avocat"
                android:textColor="@color/JauneMTN"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/documentalistes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@drawable/btn_camer"
                android:text="Documentalistes"
                android:textColor="@color/JauneMTN"
                android:textStyle="bold" />

            <Button
                android:id="@+id/greffiers_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_camer"
                android:text="Greffiers"
                android:textColor="@color/JauneMTN"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        >

        <TextView
            android:id="@+id/ministere_french"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ministère de la justice"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="12dp"

            />

        <TextView
            android:id="@+id/ministere_english"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ministry of Justice"
            android:textColor="@color/White"
            android:textSize="12dp"

            />

    </LinearLayout>

</RelativeLayout>